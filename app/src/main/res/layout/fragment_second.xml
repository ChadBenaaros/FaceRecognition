<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_finder"
        android:layout_width="951dp"
        android:layout_height="1694dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="89dp"
            android:layout_height="53dp"
            android:layout_marginStart="306dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="618dp"
            android:background="@drawable/retur"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.901"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.033" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="82dp"
            android:layout_marginStart="297dp"
            android:layout_marginTop="1448dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="164dp"
            android:background="@drawable/button_states"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.widget.Button
                android:id="@+id/button_second"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:background="@drawable/close"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/first_fragment_label" />

            <android.widget.Button
                android:id="@+id/capture"
                android:layout_width="98dp"
                android:layout_height="72dp"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:background="@drawable/prf"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/hello_first_fragment" />

            <android.widget.Button
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:background="@drawable/ok"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/action_settings" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>